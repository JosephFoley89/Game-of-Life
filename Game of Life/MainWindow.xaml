<Window x:Class="Game_of_Life.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_of_Life"
        mc:Ignorable="d"
        Title="Conway's Game of Life" Height="1150" Width="1050">
    <Grid x:Name="GameBoard">
        <Label x:Name="Generation" Content="Generation: 0" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="152"/>
        <Label x:Name="PercentageAlive" Content="Alive: 0" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="152"/>
        <Button Content="Start" Margin="0,16,58,0" VerticalAlignment="Top" Click="Button_Click" HorizontalAlignment="Right" Width="28"/>
        <Button Content="Stop" Margin="0,16,24,0" VerticalAlignment="Top" Click="Button_Click_1" HorizontalAlignment="Right" Width="28"/>
        <Button Content="Randomize" HorizontalAlignment="Right" Margin="0,16,90,0" VerticalAlignment="Top" Width="100" Click="Button_Click_2"/>
        <Button Content="Clear Board" HorizontalAlignment="Right" Margin="0,16,195,0" VerticalAlignment="Top" Click="Button_Click_3"/>
    </Grid>
</Window>
